  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"/>
<TextView android:id="@+id/text2"
    android:layout_marginLeft="30sp"
  	android:textSize="13sp"
  	android:textStyle="bold"      
  	android:layout_width="wrap_content"         
  	android:layout_height="fill_parent"/>
</LinearLayout>
